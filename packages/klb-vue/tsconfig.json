{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext", "dom"
        ],
        "declaration": true,
        "emitDeclarationOnly": false,
        "isolatedModules": true,
        "skipLibCheck": true,
        "types": ["vite/client"]
    },
    "include": [
        "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"
, "src/types/env.d.ts"    ],
    "exclude": [
        "node_modules", "dist",
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
