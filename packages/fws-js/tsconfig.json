{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
          "esnext",
          "dom"
        ],
        "declaration": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "composite": true,
        "allowSyntheticDefaultImports": true,
        "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",

    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}
